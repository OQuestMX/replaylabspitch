        );

        const ScreenTraction = () => (
            <div className="p-8 md:p-12 h-full flex flex-col justify-center">
                <SectionTitle number="06" title="Validation" subtitle="MARKET PROOF" color="text-green-400" />
                
                <div className="grid md:grid-cols-2 gap-8 h-full md:h-2/3 mb-8">
                    <div className="relative border border-brandTeal/30 bg-gradient-to-br from-brandTeal/10 to-transparent p-8 flex flex-col justify-end group overflow-hidden">
                        <div className="absolute top-4 right-4 font-mono text-xs text-brandTeal border border-brandTeal px-2 py-1">ENTERPRISE</div>
                        <div className="text-6xl font-bold text-white mb-2">3</div>
                        <div className="text-xl text-brandTeal mb-4">Fortune 1000 Pilots</div>
                        <p className="text-sm text-gray-400">Signed contracts with major logistics and manufacturing firms.</p>
                    </div>

                    <div className="relative border border-brandPurple/30 bg-gradient-to-br from-brandPurple/10 to-transparent p-8 flex flex-col justify-end group overflow-hidden">
                        <div className="absolute top-4 right-4 font-mono text-xs text-brandPurple border border-brandPurple px-2 py-1">GIG ECON</div>
                        <div className="text-6xl font-bold text-white mb-2">4.9<span className="text-2xl text-gray-500">/5</span></div>
                        <div className="text-xl text-brandPurple mb-4">App Store Rating</div>
                        <p className="text-sm text-gray-400">Consistent organic growth driven by "cult-like" user base.</p>
                    </div>
                </div>

                <div className="flex justify-end">
                    <button className="px-8 py-4 border border-green-400 text-green-400 hover:bg-green-400 hover:text-black transition-all font-mono text-sm tracking-wider uppercase flex items-center gap-2 group">
                        [ BECOME A PILOT PARTNER ]
                        <span className="group-hover:translate-x-1 transition-transform">-></span>
                    </button>
                </div>
            </div>
        );

        const ScreenTeam = () => (
            <div className="p-8 md:p-12 h-full flex flex-col justify-center">
                <SectionTitle number="07" title="The Architects" subtitle="FOUNDING TEAM" color="text-white" />
                
                <div className="grid md:grid-cols-2 gap-12 mb-12">
                    <div className="flex items-start gap-6">
                        <div className="w-24 h-24 shrink-0 bg-blue-900 overflow-hidden border border-blue-500/50 grayscale contrast-125">
                            <img src="https://api.dicebear.com/7.x/pixel-art/svg?seed=Eduardo&backgroundColor=0f172a" alt="Eduardo" className="w-full h-full object-cover" />
                        </div>
                        <div>
                            <h3 className="text-xl font-bold text-white">Eduardo T. Elizondo</h3>
                            <div className="font-mono text-xs text-brandTeal mb-3">SYSTEMS ARCHITECT</div>
                            <p className="text-sm text-gray-400">Former Accenture Strategy. Expert in enterprise entropy reduction and complex systems theory.</p>
                        </div>
                    </div>

                    <div className="flex items-start gap-6">
                        <div className="w-24 h-24 shrink-0 bg-purple-900 overflow-hidden border border-purple-500/50 grayscale contrast-125">
                            <img src="https://api.dicebear.com/7.x/pixel-art/svg?seed=Alejandro&backgroundColor=3b0764" alt="Alejandro" className="w-full h-full object-cover" />
                        </div>
                        <div>
                            <h3 className="text-xl font-bold text-white">Alejandro Paez</h3>
                            <div className="font-mono text-xs text-brandPurple mb-3">MANAGING PARTNER</div>
                            <p className="text-sm text-gray-400">Serial Entrepreneur. Built and exited two SaaS platforms in the Gig Economy space.</p>
                        </div>
                    </div>
                </div>

                <div className="flex flex-col md:flex-row gap-6">
                    <button className="flex-1 px-8 py-4 border border-white text-white hover:bg-white hover:text-black transition-all font-mono text-sm tracking-wider uppercase flex items-center justify-center gap-2 group">
                        [ CONTACT FOUNDERS ]
                        <span className="group-hover:translate-x-1 transition-transform">-></span>
                    </button>
                    <button className="flex-1 px-8 py-4 border border-gray-600 text-gray-400 hover:border-white hover:text-white transition-all font-mono text-sm tracking-wider uppercase flex items-center justify-center gap-2 group">
                        [ WANT TO JOIN? ]
                        <span className="group-hover:translate-x-1 transition-transform">-></span>
                    </button>
                </div>
            </div>
        );

        // --- Main App Logic ---

        const App = () => {
            const [hasEntered, setHasEntered] = useState(false);
            const [activeSection, setActiveSection] = useState('00_HOME');
            const [isMobile, setIsMobile] = useState(false);
            const [mobileMenuOpen, setMobileMenuOpen] = useState(false);

            // Handle resize for Responsive Logic
            useEffect(() => {
                const handleResize = () => setIsMobile(window.innerWidth < 768);
                handleResize(); // Init
                window.addEventListener('resize', handleResize);
                return () => window.removeEventListener('resize', handleResize);
            }, []);

            // Mobile Scroll Listener to update Active State
            useEffect(() => {
                if (!isMobile || !hasEntered) return;
                
                const handleScroll = () => {
                    const sections = SECTIONS.map(s => document.getElementById(s.id));
                    const scrollPosition = window.scrollY + window.innerHeight / 3;

                    sections.forEach(section => {
                        if (section && section.offsetTop <= scrollPosition && (section.offsetTop + section.offsetHeight) > scrollPosition) {
                            setActiveSection(section.id);
                        }
                    });
                };

                window.addEventListener('scroll', handleScroll);
                return () => window.removeEventListener('scroll', handleScroll);
            }, [isMobile, hasEntered]);

            const renderSectionContent = (id) => {
                switch(id) {
                    case '00_MTP': return <ScreenHome />; // MTP is an overlay, rendering Home under it logically if navigated to
                    case '00_HOME': return <ScreenHome />;
                    case '01_DIAGNOSTIC': return <ScreenDiagnostic />;
                    case '02_DIRECTIVE': return <ScreenDirective />;
                    case '03_ENTERPRISE': return <ScreenEnterprise />;
                    case '04_GIG_ECONOMY': return <ScreenGig />; // Mapped to correct ID
                    case '04_GIG': return <ScreenGig />; // Fallback
                    case '05_ARCHITECTURE': return <ScreenArchitecture />;
                    case '05_ARCH': return <ScreenArchitecture />; // Fallback
                    case '06_TRACTION': return <ScreenTraction />;
                    case '07_TEAM': return <ScreenTeam />;
                    default: return <ScreenHome />;
                }
            };

            const scrollToSection = (id) => {
                // Special handling for MTP
                if (id === '00_MTP') {
                    setHasEntered(false);
                    return;
                }

                if (isMobile) {
                    const el = document.getElementById(id);
                    if (el) {
                        el.scrollIntoView({ behavior: 'smooth' });
                        setMobileMenuOpen(false);
                    }
                } else {
                    setActiveSection(id);
                }
            };

            return (
                <div className="min-h-screen text-gray-200 font-sans selection:bg-brandTeal selection:text-black">
                    <div className="noise-overlay"></div>
                    
                    <AnimatePresence>
                        {!hasEntered && <ScreenMTP onEnter={() => setHasEntered(true)} />}
                    </AnimatePresence>

                    {hasEntered && (
                        <div className="flex h-screen overflow-hidden relative">
                            
                            {/* Desktop Sidebar (Navigation Matrix) */}
                            {!isMobile && (
                                <aside className="w-80 bg-panel border-l border-white/10 flex flex-col z-20 absolute right-0 top-0 bottom-0 shadow-2xl">
                                    <div className="p-8 border-b border-white/10">
                                        <div className="text-xs font-mono text-gray-500 tracking-widest uppercase">// NAVIGATION_MATRIX</div>
                                    </div>
                                    
                                    <nav className="flex-1 overflow-y-auto py-4">
                                        {SECTIONS.map((section) => (
                                            <button
                                                key={section.id}
                                                onClick={() => scrollToSection(section.id)}
                                                className={`w-full text-left px-8 py-4 font-mono text-xs transition-all duration-300 flex items-center gap-3 group hover:bg-white/5
                                                    ${activeSection === section.id ? 'text-brandTeal border-l-2 border-brandTeal bg-white/5' : 'text-gray-500 border-l-2 border-transparent'}
                                                `}
                                            >
                                                <Icon name={section.icon} className={`w-4 h-4 transition-colors ${activeSection === section.id ? 'text-brandTeal' : 'text-gray-600 group-hover:text-gray-400'}`} />
                                                <span className="uppercase tracking-wide">{section.label}</span>
                                                {activeSection === section.id && <div className="ml-auto w-1.5 h-1.5 rounded-full bg-brandTeal animate-pulse"></div>}
                                            </button>
                                        ))}
                                    </nav>

                                    <div className="p-8 border-t border-white/10 font-mono text-[10px] space-y-2 text-gray-600">
                                        <div className="flex items-center gap-2 text-green-500 mb-4">
                                            <span className="w-2 h-2 rounded-full bg-current animate-pulse"></span>
                                            SYSTEM ONLINE
                                        </div>
                                        <div>REPLAY LABS</div>
                                        <div>BUILD: v3.2.0</div>
                                        <div>LATAM SERVER</div>
                                    </div>
                                </aside>
                            )}

                            {/* Mobile Header */}
                            {isMobile && (
                                <header className="fixed top-0 left-0 right-0 h-16 bg-panel/90 backdrop-blur border-b border-white/10 z-40 flex items-center justify-between px-6">
                                    <h1 className="font-bold text-lg tracking-tighter">REPLAY<span className="text-brandTeal">LABS</span></h1>
                                    <button onClick={() => setMobileMenuOpen(!mobileMenuOpen)}>
                                        <Icon name={mobileMenuOpen ? 'x' : 'menu'} />
                                    </button>
                                </header>
                            )}

                            {/* Mobile Menu Overlay */}
                            <AnimatePresence>
                                {isMobile && mobileMenuOpen && (
                                    <motion.div 
                                        initial={{ opacity: 0, y: -20 }}
                                        animate={{ opacity: 1, y: 0 }}
                                        exit={{ opacity: 0, y: -20 }}
                                        className="fixed inset-0 top-16 bg-void z-30 p-6 overflow-y-auto"
                                    >
                                        <div className="space-y-4">
                                            {SECTIONS.map((section) => (
                                                <button
                                                    key={section.id}
                                                    onClick={() => scrollToSection(section.id)}
                                                    className="block w-full text-left text-2xl font-bold py-4 border-b border-white/10"
                                                >
                                                    <span className="text-brandTeal text-sm font-mono block mb-1">/{section.id.split('_')[1]}</span>
                                                    {section.label}
                                                </button>
                                            ))}
                                        </div>
                                    </motion.div>
                                )}
                            </AnimatePresence>

                            {/* Main Content Area */}
                            <main className={`flex-1 bg-void relative z-10 
                                ${isMobile ? 'overflow-y-auto pt-16 scroll-smooth' : 'mr-80 overflow-y-auto custom-scrollbar'}
                            `}>
                                <div className="grid-bg min-h-full">
                                    {isMobile ? (
                                        // Mobile: Stacked Vertical Layout
                                        <div className="pb-24">
                                            {SECTIONS.map(section => (
                                                <section key={section.id} id={section.id} className="min-h-screen border-b border-white/5 relative">
                                                    {renderSectionContent(section.id)}
                                                </section>
                                            ))}
                                        </div>
                                    ) : (
                                        // Desktop: Dynamic Component Switching (SPA feel)
                                        <motion.div
                                            key={activeSection}
                                            initial={{ opacity: 0, x: -20 }}
                                            animate={{ opacity: 1, x: 0 }}
                                            transition={{ duration: 0.3 }}
                                            className="h-full w-full"
                                        >
                                            {renderSectionContent(activeSection)}
                                        </motion.div>
                                    )}
                                </div>
                            </main>
                        </div>
                    )}
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
